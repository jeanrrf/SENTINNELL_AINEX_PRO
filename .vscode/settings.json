{
  "editor.tokenColorCustomizations": {
    // Regras para tema claro
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": [
            "variable.unused",
            "source.js.unused",
            "source.ts.unused",
            "constant.other.unused",
            "function.unused",
            "class.unused"
          ],
          "settings": {
            "foreground": "#FF0000",
            "fontStyle": "underline"
          }
        }
      ]
    },
    // Regras para tema escuro
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": [
            "variable.unused",
            "source.js.unused",
            "source.ts.unused",
            "constant.other.unused",
            "function.unused",
            "class.unused"
          ],
          "settings": {
            "foreground": "#FF0000",
            "fontStyle": "underline"
          }
        }
      ]
    }
  },
  "editor.showUnused": true
}